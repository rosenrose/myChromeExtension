{
    "manifest_version": 2,
    "name": "My Extensions",
    "version": "1.0",
    "description" : "Base Level Extension",
    "browser_action": {
        "default_popup": "options.html"
    },
    "background": {
        "persistent": false,
        "scripts": ["background.js"]        
    },
    "permissions": [
        "storage",
        "declarativeContent",
        "activeTab",
        "tabs",
        "webNavigation",
		"contextMenus"
    ],
    "options_page": "options.html",
    "content_scripts": [{
        "matches": [
            "*://bbs.ruliweb.com/best*",
            "*://www.dogdrip.net/*",
            "*://namu.wiki/*"
        ],
        "exclude_matches": [
        ],
        "js": [
            "script.js"
        ],
		"css":[
            "style.css"
        ]
    }]
}